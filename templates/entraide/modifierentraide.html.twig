{% extends 'Front/base.html.twig' %}



{% block content %}
    <div class="container mt-4">
        <h1>Editer votre Question!</h1>
        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-4"> {{  form_row(form.categorie) }}</div>
            <div class="col-md-4"> {{  form_row(form.email) }}</div>

        </div>

        <div class="row">

            <div class="col-md-1"> {{  form_row(form.question) }}</div>
        </div>

        {{ form_widget(form) }}
        <button class="btn btn-primary"> Sauvgarder</button>
        {{ form_end(form) }}


    </div>

{% endblock %}