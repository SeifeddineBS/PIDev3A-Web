{% extends 'Back/base.html.twig' %}

{% block content %}


    <div class="container mt -4" style="margin-right: 100px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Activite</h4>
                                <a href="{{ path('listPropoact')}}" class="btn btn-primary">Propositions</a>
                                <a href="{{ path('ajouterActivite')}}" class="btn btn-primary">Ajouter une activite</a>

                            </div>
                            <div class="content table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th>Coach</th>
                                    <th>Duree</th>
                                    <th>Date</th>
                                    <th>Nombremax</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>Lieu</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                    </thead>
                                    <tbody>
                                    {% for activite in Activite %}
                                        <tr>
                                            <td>{{ activite.idcoach}}</td>
                                            <td>{{ activite.duree}}</td>
                                            <td>{{ activite.date}}</td>
                                            <td>{{ activite.nombremax}}</td>
                                            <td>{{ activite.description}}</td>
                                            <td>{{ activite.type}}</td>
                                            <td>{{ activite.lieu}}</td>

                                            <td><a  href="{{ path("modifierActivite",{"id":activite.id}) }}">edit</a>

                                            </td>
                                            <td> <form method="post" action="{{ path ('supprimerActivite', {'id' : activite.id})}}">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button class="btn btn-success" style="color: red">remove</button>
                                                </form>
                                            </td>

                                        </tr>
                                    {% endfor %}



                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>






            </div>
        </div>
    </div>



{% endblock %}