{% extends 'Back/base.html.twig' %}

{% block content %}


    <div class="container mt -4" style="margin-right: 100px">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Therapie</h4>
                                <a href="{{ path('listPropoTherapie')}}" class="btn btn-primary">Propositions</a>

                                <a href="{{ path('ajouterTherapie')}}" class="btn btn-primary">Ajouter une therapie</a>

                            </div>
                            <div class="content table-responsive ">
                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th>ID</th>
                                    <th>idCoach</th>
                                    <th>sujet</th>
                                    <th>date</th>
                                    <th>nombremax</th>
                                    <th>lieu</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                    </thead>
                                    <tbody>
                                    {% for activite in Therapie %}
                                        <tr>
                                            <td>{{ activite.id }}</td>
                                            <td>{{ activite.idcoach}}</td>
                                            <td>{{ activite.sujet}}</td>
                                            <td>{{ activite.date}}</td>
                                            <td>{{ activite.nombremax}}</td>
                                            <td>{{ activite.lieu}}</td>

                                            <td><a  href="{{ path("modifierTherapie",{"id":activite.id}) }}">edit</a>

                                            </td>
                                            <td> <form method="post" action="{{ path ('supprimerTherapie', {'id' : activite.id})}}">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button class="btn btn-success" style="color: red">Supprimer</button>
                                                </form>
                                            </td>

                                        </tr>
                                    {% endfor %}



                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>





                </div>
            </div>
        </div>
    </div>



{% endblock %}