{% extends 'Front/base.html.twig' %}

{% block content %}
    <br>
    <br>
    <br>
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Mes objectifs</h2>
                    <p>“Un gagnant est une personne qui a identifié ses talents, a travaillé avec acharnement pour les développer, et a utilisé les dites capacités afin d’accomplir ses objectifs.”</p>
                </div>
            </div>
        </div>
        <div class="container">
            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Mes objectifs</li>
            </ol>
            <a href="{{ path('ajouterObjectif')}}" class="btn btn-primary">Ajouter un objectif</a>
            <a href="{{ path('agenda')}}" class="btn btn-primary">Consulter mon agenda</a>
        </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center" data-aos="fade-up">
                    <ul id="portfolio-flters">
                        <h4>Trier: </h4>
                        <button id="button" type="button" class="btn btn-outline-default btn-rounded waves-effect">	<a href="{{ 'triObjectifDesc' }}"  class="at-linkactive">par description </a></button>
                        <button id="button" type="button" class="btn btn-outline-default btn-rounded waves-effect">	<a href="{{ 'triObjectifRep' }}"  class="at-linkactive">par réponse </a></button>
                        <button id="button" type="button" class="btn btn-outline-default btn-rounded waves-effect">	<a href="{{ 'triObjectifDate' }}"  class="at-linkactive">par date </a></button>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container" data-aos="fade-up">
                {% if objectifs %}
                {% for objectif in objectifs %}
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-wrap">
                        <img src={{"/assets/img/Chirine/" ~ objectif.icone}} class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>{{ objectif.description }}</h4>
                            <h4>{{ objectif.reponse }}</h4>
                            <p>{{ objectif.dateDebut }}</p>
                            <div class="portfolio-links">
                                <script>
                                    stat = 0;
                                <a href={{"/assets/img/Chirine/" ~ objectif.icone}} data-gallery="portfolioGallery" class="portfolio-lightbox" title={{ "Monobjectif" }}>
                                    <i class="bx bx-plus"></i></a>
                                </script>

                                <a href="{{ path('afficherDetailsObjectif', {id: objectif.id}) }}" title="More Details"><i class="bx bx-link"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% else %}
                <p class="description">Vous n'avez aucun objectif</p>
            {% endif %}
        </div>
        </div>
    </section><!-- End Portfolio Section -->

{% endblock %}

