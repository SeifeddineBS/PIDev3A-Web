{% extends 'Back/base.html.twig' %}






{% block content %}
    {{ form_start(form_modify, {attr: {'novalidate': 'novalidate'}}) }}
    {{ form_row(form_modify._token) }}
    <link href={{ asset('assets/css/styleProfile.css') }} rel="stylesheet">

    <div style="padding:50px">

    </div>




<li>{{form_modify.vars.errors}}</li>




    <div class="container" style="    margin-right: 110px;">
        {% for message in app.flashes('info') %}

            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="row gutters">
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="user-avatar">
                                    {% set picture = User.picture  %}
                                    {% set link = "uploads/profile/" %}
                                    <img src={{ asset( "#{link}#{picture}" ) }}>
                                </div>

                                <h5 class="user-name">{{ User.nom }} {{ User.prenom }}</h5>
                                <h6 class="user-email">{{ User.email }}</h6>
                                <a href={{ path('change_passwordCoach') }}> Changer votre mot de passe </a>
                                <a href={{ path('logout') }}>Desactiver mon compte </a>



                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Vos informations</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">

                                    <label for="phone">Nom</label>

                                  {{ form_widget(form_modify.nom,{ 'attr': {'class': "form-control",
                                      'value': User.nom,
                                          'placeholder': 'Votre Nom'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.nom) }}</div>



                                </div>
                            </div>

                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="phone">Prenom</label>
                                    {{ form_widget(form_modify.prenom,{ 'attr': {'class': "form-control",
                                        'value': User.prenom,
                                        'placeholder': 'Votre prenom'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.prenom) }}</div>                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="website">Numero telephone</label>
                                    {{ form_widget(form_modify.tel,{ 'attr': {'class': "form-control",
                                        'value': User.tel,
                                        'placeholder': 'Votre Telephone'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.tel) }}</div>                                 </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="zIp">Speciliate</label>
                                    {{ form_widget(form_modify.specialite,{ 'attr': {'class': "form-control",
                                        'value': User.specialite,
                                        'placeholder': 'Votre specialite'|trans} }) }}
                                    <div style="color:#ff0000;"> {{ form_errors(form_modify.specialite) }}
                                    </div>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="zIp">Votre photo</label>
                                        {{ form_widget(form_modify.picture) }}
                                        {{ form_errors(form_modify.picture) }}

                                    </div>

                            </div>



                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-right">
                                    <button type="submit" class="btn btn-success">Modifier</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="padding:70px">

    </div>
        <div id="divCheckbox" style="display: none;">{{ form_rest(form_modify) }}</div>


        {{ form_end(form_modify, {'render_rest': false}) }}

{% endblock %}


